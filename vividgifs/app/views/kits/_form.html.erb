<%= form_for @kit do |f| %>
  <%= f.label :name, "title" %>
  <%= f.text_field :name %><br>
    <%= f.label :pic, "url" %>
  <%= f.text_field :pic %>
  <br>
  <%= f.label :sampler_id %>
<%= f.select :sampler_id, Sampler.all.map{|sampler| [sampler.name, sampler.id]} %>
  <br>
  <%= f.submit %>
<% end %>