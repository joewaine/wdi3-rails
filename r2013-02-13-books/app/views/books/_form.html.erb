<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <br>
  <%= f.label :plot %>
  <%= f.text_field :plot %>
  <br>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <br>
  <%= f.label :author_id %>
  <%= f.select :author_id, Author.all.map{|author| [author.name, author.id]},
  :include_blank => true, :prompt => 'select author' %>
  <br>
  <%= f.submit %>
<% end %>